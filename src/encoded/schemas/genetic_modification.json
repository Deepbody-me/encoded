                        "title": "Technique used",
                        "description": "Technique used to produce the described genetic modification.",
                        "type": "string",
                        "enum":[
                            "CRISPR",
                            "TALE",
                            "stable transfection",
                            "transient transfection",
                            "transduction",
                            "RNAi",
                            "mutagen"
                        ]
                    },
                    "reagent_repository": {
                        "title": "Reagent repository",
                        "description": "Repository where reagent used to produce the described genetic modification can be obtained, if applicable.",
                        "comment": "See source.json for identifiers (e.g. addgene, bacpac, rnai-consortium",
                        "type": "string",
