                                }
                            },
                            "RVD_sequences": {
                                "title": "RVD sequences",
                                "description": "The repeat variable diresidue sequences of the TAL effector. E.g. NI,NG,NI,HD,NG,NN,NG,NG,NN,HD,NI,NI,NI,NI,NM,HD,HD,NG",
                                "type": "array",
                                "items": {
                                    "title": "RVD sequence",
