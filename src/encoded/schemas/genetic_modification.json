            }
        }
    },
    "columns": {
        "aliases": {
            "title": "Lab aliases"
        },
        "modification_type": {
            "title": "Modification type"
        },
        "status": {
            "title": "Genetic modification status"
        }
    },
    "facets": {
        "modification_type": {
            "title": "Modification type"
        },
        "target.label": {
            "title": "Target"
        },
        "status": {
            "title": "Genetic modification status"
        }
    },
    "changelog": "/profiles/changelogs/genetic_modification.md"
}
