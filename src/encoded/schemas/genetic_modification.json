{
    "title": "Genetic Modification",
    "description": "Schema for submitting an information on genetic modification.",
    "id": "/profiles/genetic_modification.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "anyOf": [
        {
            "required": ["lab", "award", "modification_type", "purpose", "location_by_target_id"]
        },
        {
            "required": ["lab", "award", "modification_type", "purpose", "location_by_coordinates"]
        },
        {
            "required": ["lab", "award", "modification_type", "purpose", "location_by_sequence"]
        }

    ],
    
    "identifyingProperties": ["uuid","aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/accessioned_status" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/notes" }
    ],    
    "dependencies": {
        "purpose": {
            "comment": "Modifications for tagging purposes need to include the epitope_tag property in combination with a target. Modifications for other purposes also need either the site and/or target specified.",
            "oneOf": [
                {
                    "required": ["location_by_target_id", "epitope_tags"],
                    "properties": {
                    "purpose": {
                            "enum": ["tagging"]
                        }
                    },
                    "epitope_tags": {
                        "minItems": 1
                    }
                },
                {
                    "required": ["location_by_target_id"],
                    "properties": {
                    "purpose": {
                            "enum": ["repression", "activation", "overexpression", "validation"]
                        }
                    }
                },
                {
                    "required": ["location_by_coordinates"],
                    "properties": {
                    "purpose": {
                            "enum": ["repression", "activation", "overexpression", "validation"]
                        }
                    }
                },
                {
                    "properties": {
                        "purpose": {
                            "enum": ["analysis"]
                        }
                    }
                  
                }
            ]
        },
        "modification_type": {
            "properties": {
                "not": {
                    "purpose": {
                        "enum": ["tagging"]
                    }
                },                
                "modification_type": {
                    "enum": ["deletion"]
                }
            }
        },
        "epitope_tags": {
            "comment": "Specified epitope tags shoul dinclude at least one entry.",
            "properties":{
                "epitope_tags": {
                    "minItems": 1
                }
            }
        }          

           
    },
    "properties": {
        "schema_version": {
            "default": "5"
        },
        "accession": {
            "accessionType": "GM"
        },
        "alternate_accessions": {
            "title": "Alternate accessions",
            "description": "Accessions previously assigned to objects that have been merged with this object.",
            "comment": "Do not submit. Only admins are allowed to set or update this value.",
            "type": "array",
            "default": [],
            "permission": "import_items",
            "items": {
                "title": "Alternate Accession",
                "description": "An accession previously assigned to an object that has been merged with this object.",
                "comment": "Only accessions of objects that have status equal replaced will work here.",
                "type": "string",
                "format": "accession",
                "pattern": "^(ENCGM\\d{3}[A-Z]{3})$|^(TSTGM\\d{6})$"
            }
        },
        "description": {
            "title": "Description",
            "description": "A plain text description of the genetic modification.",
            "type": "string",
            "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$"
        },


# WHERE

        "location_by_target_id": {
            "title": "Modified target ID",
            "description": "The name (ENCODE target ID) of the gene whose expression or product is modified by the genetic modification.",
            "comment": "See target.json for available identifiers.",
            "type": "string",
            "linkTo": "Target"
        },
        "location_by_coordinates": {
            "title": "Modified site",
            "description": "Genomic coordinates of the modification.",
            "type": "object",
            "additionalProperties": false,
            "required":["assembly", "chromosome", "start", "end"],
            "properties": {
                "assembly": {
                    "title": "Mapping assembly",
                    "description": "The genome assembly to which modification coordinates relate. e.g. GRCh38.",
                    "type": "string",
                    "enum": [
                        "mm9",
                        "mm10",
                        "mm10-minimal",
                        "hg19",
                        "GRCh38",
                        "GRCh38-minimal",
                        "ce10",
                        "ce11",
                        "dm3",
                        "dm6",
                        "J02459.1"
                        ]
                },
                "chromosome": {
                    "title": "Chromosome",
                    "description": "The number (or letter) designation for the target chromosome. e.g. 1, 2L, or X",
                    "type": "string"
                },
                "start": {
                    "title": "Start",
                    "description": "The starting coordinate.",
                    "type": "integer"
                },
                "end": {
                    "title": "End",
                    "description": "The ending coordinate (possibly equal to the starting coordinate for one base.)",
                    "type": "integer"
                }
            }
        },
        "location_by_sequence" : {
            "title": "Location sequence",
            "description": "Genomic sequence specifying location of the modification.",
            "type": "string",
            "pattern": "^[ACTG]+$"
        },

# WHAT
        "epitope_tags": {
            "title": "Protein epitope tags",
            "description": "Eptiope tags introduced in the modification.",
            "type": "array",
            "items": {
                "title": "Protein epitope tag",
                "description": "Epitope tag introduced in the modification.",
                "comment": "Submit tag name and tag location. If the fusion protein is designed to be expressed with a non-native promoter, please indicate the promoter used.",
                "type": "object",
                "additionalProperties": false,
                "required": ["name", "location"],
                "properties": {
                    "name": {
                        "type": "string",
                        "enum": [
                            "eGFP",
                            "V5",
                            "HA",
                            "ER",
                            "3xFLAG",
                            "DsRed",
                            "TRE",
                            "T2A",
                            "YFP",
                            "FLAG",
                            "mCherry"
                        ]
                    },
                    "location": {
                        "type": "string",
                        "enum": [
                            "N-terminal",
                            "C-terminal",
                            "internal",
                            "other",
                            "unknown"
                        ]
                    },
                    "promoter_used": {
                        "title": "Promoter used in construct",
                        "description": "The name of the gene that the promoter regulates natively.",
                        "comment": "See target.json for available identifiers.",
                        "type": "string",
                        "linkTo": "Target"
                    }
                }
            }
        },
        "modification_type": {
            "title": "Modification type",
            "description": "The type of the genetic modification.",
            "type": "string",
            "enum": [
                "deletion",
                "insertion",
                "replacement",
                "mutagenesis",
                "interference"
            ]
        },
        "purpose":{
            "title": "Purpose",
            "description": "The purpose of the genetic modification.",
            "type": "string",
            "enum": [
                "repression",
                "activation",
                "overexpression",
                "tagging",
                "validation",
                "analysis"
            ]
        },
        "zygosity":{
            "title": "Modification zygosity",
            "description": "The zygosity of the genetic modification.",
            "type": "string",
            "enum": [
                "homozygous",
                "heterozygous"
            ]
        },

# HOW
        "technique_name": {
            "title": "Technique used",
            "description": "Technique used to produce the described genetic modification.",
            "type": "string",
            "enum":[
                "CRISPR",
                "TALE",
                "stable transfection",
                "transient transfection",
                "transduction",
                "RNAi",
                "mutagen"
            ]
        },
        "technique_by_reagent": {
            "title": "Reagent repository",
            "description": "Repository where reagent used to produce the described genetic modification can be obtained, if applicable.",
            "comment": "See source.json for identifiers (e.g. addgene, bacpac, rnai-consortium",
            "type": "string",
            "linkTo": "Source"
        },
        "reagent_identifiers": {
            "title": "Reagent identifier",
            "description": "Repository identifier of the reagent used to produce the describe genetic modification, if applicable.",
            "comment": "If a mutagenic chemical is used, please provide the ChEBI ID.",
            "type": "array",
            "items":{
                "type": "string",
                "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$|^$"
            }
        },
        "documents": {
            "title": "Documents",
            "description": "Supporting documents describing how the genetic modification(s) was/were produced.",
            "comment": "If reagents were not deposited into a repository with relevant details, then please describe the methods in attached documents.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Document",
                "description": "Supporting document describing how the genetic modification(s) was/were produced.",
                "type": "string",
                "comment": "See document.json for available identifiers.",
                "linkTo": "Document"
            }
        },
        "technique_by_treatment": { 
            "title": "Treatment",
            "description": "A list of relevant treatments applied to result in the modification.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Treatment",
                "description": "Treatment applied to result in the modification.",
                "type": "string",
                "comment": "See treatment.json for available identifiers.",
                "linkTo": "Treatment"
            }
        },
        "technique_by_details": { 
            "title": "Sequence information",
            "description": "A list of relevant sequences related to the technique described.",
            "type": "object",
            "additionalProperties": false,
            "dependencies": {
                "reagent_identifiers": ["reagent_repository"],
                "techniques_used": {
                    "oneOf": [
                        {
                            "required": ["guide_rna_sequences"],
                            "properties": {
                                "technique_used": {
                                    "enum": ["CRISPR"]
                                }
                            }
                        },
                        {
                            "required": ["rnai_sequences"],
                            "properties":{
                                "technique_used": {
                                    "enum": ["RNAi"]
                                }
                            }
                        },
                        {
                            "required": ["RVD_sequences"],
                            "properties":{
                                "technique_used": {
                                    "enum": ["TALE"]
                                }
                            }
                        },
                        {
                            "properties":{
                                "technique_used": {
                                    "enum": [
                                        "stable transfection",
                                        "transient transfection",
                                        "transduction",
                                        "mutagen"
                                    ]
                                }
                            }
                        }
                    ]
                }
            },
            "properties": {
                "rnai_sequences": {
                    "title": "RNAi sequences",
                    "description": "Sequences of the inhibitory RNA.",
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "title": "RNAi sequence",
                        "description": "Sequences of the inhibitory RNA.",
                        "type": "string",
                        "pattern": "^[ACUNTG-]+$"
                    }
                },
                "target_sequence": {
                    "title": "Target sequence",
                    "description": "Genomic sequence targeted by the inhibitory RNA or TALE.",
                    "type": "string",
                    "pattern": "^[ACTG]+|non-mammalian target$"
                },
                "guide_rna_sequences": {
                    "title": "Guide RNA sequences",
                    "description": "gRNA sequences used in CRISPR genetic modification",
                    "type": "array",
                    "default": [],
                    "uniqueItems": true,
                    "items": {
                        "title": "gRNA sequence",
                        "description": "guide RNA sequence used in the experiment.",
                        "type": "string",
                        "pattern": "^[ACUNTG]+$"
                    }
                },
                "RVD_sequences": {
                    "title": "RVD sequences",
                    "description": "The repeat variable diresidue sequences of the TAL effector. E.g. NI,NG,NI,HD,NG,NN,NG,NG,NN,HD,NI,NI,NI,NI,NM,HD,HD,NG",
                    "type": "array",
                    "items": {
                        "title": "RVD sequence",
                        "type": "string",
                        "pattern": "^([ARNDCQEGHILKMFPSTWYV]{2})($|(,\\1))*"
                    }
                }
            }
        },
        "insert_sequence": {
            "title": "Insert sequence",
            "description": "Insert sequence",
        	"type": "string",
            "pattern": "^[ACTG]+$"	
		}

# TO REMOVE
        "techniques_used": {
            "title": "Techniques used",
            "description": "Genetic modification technique(s)/tool(s) used to perform the modification.",
            "type": "array",
            "default": [],
            "permission": "import_items",
            "uniqueItems": true,
            "items":{
                "title": "Technique used",
                "description": "Techniques and reagents used to produce the described genetic modification.",
                "additionalProperties": false,
                "type": "object",
                "properties": {
