{
    "title": "Workflow run",
    "description": "Schema for reporting a specific instance of a workflow execution.",
    "id": "/profiles/workflow_run.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["pipeline"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/standard_status" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "pipeline": {
            "description": "Reference to the pipeline being executed.",
            "comment": "See pipeline.json for available identifiers.",
            "type": "string",
            "linkTo": "Pipeline"
        }
    },
    "facets": {
        "status": {
            "title": "Status"
        }
    },
    "changelog": "/profiles/changelogs/workflow_run.md"
}